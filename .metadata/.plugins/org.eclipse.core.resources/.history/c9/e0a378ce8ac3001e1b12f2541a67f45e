// Standard (system) header files
#include <iostream>
#include <cstdlib>
// Add more standard header files as required


using namespace std;

// Add your project's header files here
#include "ResistorPart.h"
#include "SerialResistorConnection.h"
#include "ParallelResistorConnection.h"

// Main program
int main ()
{
	cout << "ResistorNetwork started." << endl << endl;

	ResistorPart obj1("R1", 42, 5);

	cout << obj1 << endl;

	shared_ptr<ResistorPart> R1 = make_shared<ResistorPart>(ResistorPart("R1", 1000, 10));
//	shared_ptr<Resistor> R1 = shared_ptr<Resistor>(new ResistorPart("R1", 1000, 10));
	shared_ptr<Resistor> R3 = shared_ptr<Resistor>(new ResistorPart("R3", 1000, 10));
	shared_ptr<Resistor> R4 = shared_ptr<Resistor>(new ResistorPart("R4", 4700, 10));
	shared_ptr<Resistor> R6 = shared_ptr<Resistor>(new ResistorPart("R6", 1000, 10));
	shared_ptr<Resistor> R7 = shared_ptr<Resistor>(new ResistorPart("R7", 4700, 10));

	SerialResistorConnection R2("R2");
	R2 += R3;
	R2 += R4;

	cout << R2.toString() << endl;

	ParallelResistorConnection R5("R5");
	R5 += R6;
	R5 += R7;

	cout << R5.toString() << endl;

	return 0;
}
