#ifndef RESISTOR_H_
#define RESISTOR_H_

#include <string>
#include <iostream>
#include <sstream>
#include <iomanip>

class Resistor
{
private:
	std::string name;

public:
	Resistor(std::string name);
	virtual ~Resistor();
	std::string getName() const;
	float nominalValue() const;
	float minimumValue() const;
	float maximumValue() const;
	std::string toString() const;
};

#endif /* RESISTOR_H_ */
